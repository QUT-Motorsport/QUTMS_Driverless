<!-- TODO:  COPIED FROM THE EXAMPLE 9 OF ROS2_CONTROL - NEED MODIFICATION -->
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="qev3d_gazebo" params="prefix">

    <!-- ros_control plugin -->
    <gazebo>
      <plugin filename="gz_ros2_control-system" name="gz_ros2_control::GazeboSimROS2ControlPlugin">
        <parameters>$(find qev3d_ros2_control)/config/qev3d_controller.yaml</parameters>
      </plugin>
    </gazebo>

    <!-- Base Link -->
    <gazebo reference="${base_frame}">
      <material>Gazebo/Orange</material>
    </gazebo>

    <!-- Chassis Link -->
    <gazebo reference="${chassis_link}">
      <material>Gazebo/Yellow</material>
    </gazebo>

    <gazebo reference="virtual_rear_wheel">
      <material>Gazebo/Orange</material>
    </gazebo>

    <gazebo reference="virtual_front_wheel">
      <material>Gazebo/Orange</material>
    </gazebo>

  </xacro:macro>

</robot>
